{
  "manifest_version": 3,
  "name": "Flavorlestown",
  "version": "1.0",
  "description": "Make Flavortown as flavorful or flavorless as you like!",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Adjust Flavor Level"
  },
  "content_scripts": [
    {
      "matches": [
        "*://flavortown.hackclub.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}